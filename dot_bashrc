alias pcd_as="~/bin/discourse_application_server/start"
alias pcd_rr="~/bin/RT-RPC/start"
alias pcd_cg="~/bin/customer_gateway/start"

alias pcd_t="~/projects/tranche_dev/project_share/start"
alias pcd_ws4="~/projects/ws4_dev/project_share/start"


